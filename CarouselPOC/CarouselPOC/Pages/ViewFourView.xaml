<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CarouselPOC.Pages.ViewFourView">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition  Height="*" />
      <RowDefinition  Height="*" />
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="20" />
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="20" />
    </Grid.ColumnDefinitions>
    <Label x:Name="TitleLabel" Grid.Row="0" Grid.Column="1" Text="Four" VerticalOptions="Center" HorizontalOptions="Center" />
    <StackLayout Grid.Row="1" Grid.Column="1">
      <Entry x:Name="InputEntry" HorizontalOptions="Fill" BackgroundColor="White" TextColor="Blue" />
      <Label x:Name="InputLabel" Text="Enter a value" HorizontalOptions="Fill" />
      <Button x:Name="ClearButton" Text="Clear Text" HorizontalOptions="Fill" />
    </StackLayout>
  </Grid>
</ContentView>